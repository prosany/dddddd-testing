{
  "compilerOptions": {
    "target": "ES2016",
    // "module": "CommonJS",
    "rootDir": "./src",
    // "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true, // NEW
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/*", "src/**/*"],
  "exclude": ["node_modules"],
  "files": ["src/types/express.d.ts", "src/types/declaration.d.ts"]
}
